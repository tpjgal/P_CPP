#include <iostream>
using namespace std;

int main() {

	char text[] = "hello";

	for(int i=0; i<sizeof(text); i++) {
		cout << i << ": " << (int)text[i] << endl;
	}

	while(true) {

		if(text[i] == 0)
			break;

		cout << text[i] << endl;
	}

	return 0;
}
