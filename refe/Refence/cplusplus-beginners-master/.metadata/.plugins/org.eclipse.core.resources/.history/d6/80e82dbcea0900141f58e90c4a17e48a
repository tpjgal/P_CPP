#include <iostream>
using namespace std;

/*
 * Array of chars
 */

int main() {

	char text[] = "hello";

	char *pText = text;

	for(int i=0; i<sizeof(text); i++) {
		cout << i << ": " << text[i] << ": " << pText[i] << endl;
	}

	return 0;
}
