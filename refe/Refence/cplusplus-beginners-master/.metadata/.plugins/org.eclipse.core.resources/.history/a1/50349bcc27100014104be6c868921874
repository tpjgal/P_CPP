#include <iostream>
using namespace std;

void show(int elements, string *texts) {

	for(int i=0; i<elements; i++) {
		cout << texts[i] << endl;
	}
}

int main() {

	string texts[] = {"apple", "orange", "banana"};

	show(3, texts);

	return 0;
}
