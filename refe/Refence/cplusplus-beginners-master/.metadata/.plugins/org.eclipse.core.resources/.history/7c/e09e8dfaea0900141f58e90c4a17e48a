#include <iostream>
using namespace std;

/*
 * Array of chars
 * Iterate through char array with pointer, using array syntax [i]
 */

int main() {

	char text[] = "hello";

	char *pText1 = text;
	char *pText2 = text;


	for(int i=0; i<sizeof(text); i++) {
		cout << i << ": " << text[i] << flush;
		cout << ": " << pText1[i] << flush;
		cout << *pText2 << endl;

		cout << endl;
	}

	return 0;
}
