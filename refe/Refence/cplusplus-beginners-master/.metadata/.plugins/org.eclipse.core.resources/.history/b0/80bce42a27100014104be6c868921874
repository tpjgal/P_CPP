#include <iostream>
using namespace std;

string texts[] = {"one", "two", "three"};

void show(string (&texts)[]) {
	cout << sizeof(texts) << endl;
	cout << texts[2] << endl;
}

int main() {

	show(texts);
	return 0;
}
