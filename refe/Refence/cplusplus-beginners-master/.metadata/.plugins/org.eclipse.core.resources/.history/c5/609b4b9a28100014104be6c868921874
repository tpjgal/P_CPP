#include <iostream>
using namespace std;

void show1(string (&texts)[3]) {

	cout << sizeof(texts) << endl;

	for(int i=0; i<3; i++) {
		cout << texts[i] << endl;
	}
}

void show2(string texts[]) {

	for(int i=0; i<3; i++) {
		cout << texts[i] << endl;
	}
}

int main() {

	string texts[] = {"apple", "orange", "banana"};

	cout << sizeof(texts) << endl;

	show2(texts);

	return 0;
}
